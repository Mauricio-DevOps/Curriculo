@model ContactFormViewModel
@{
    ViewData["Title"] = "Contato";
}

<section class="contact-hero">
    <div>
        <p class="intro-label">Contato</p>
        <h1>Vamos conversar?</h1>
        <p>
            Preencha o formulario ou utilize os canais ao lado para falar comigo sobre projetos, consultorias ou oportunidades.
        </p>
        <div class="contact-channels">
            <div>
                <span class="summary-label">Email</span>
                <p>mnmarquesgames@gmail.com</p>
            </div>
            <div>
                <span class="summary-label">Telefone</span>
                <p>+55 (31) 99498-1708</p>
            </div>
        </div>
    </div>
</section>

<section class="contact-section">
    <form asp-action="Contato" method="post" class="contact-form" novalidate>
        @if (TempData["ContactSuccess"] is string successMessage)
        {
            <div class="alert alert-success">@successMessage</div>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" placeholder="Seu nome completo" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="seuemail@exemplo.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" type="text" placeholder="Diga sobre o que gostaria de falar" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea asp-for="Message" rows="5" placeholder="Conte-me mais detalhes..."></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn primary full-width">Enviar Mensagem</button>
    </form>
    <aside class="contact-info-card">
        <h3>Disponibilidade</h3>
        <p>Horarios flexiveis para reunioes remotas.</p>
        <ul>
            <li>Baseado em Belo Horizonte, MG</li>
            <li>Oportunidades presenciais e hibridas em Belo Horizonte</li>
            <li>Oportunidades em Home Office</li>
            <li>Resposta em ate 24 horas uteis</li>
        </ul>
    </aside>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
